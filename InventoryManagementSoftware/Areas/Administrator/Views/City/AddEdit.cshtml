@using InventoryManagementSoftware.Core.Models;

@model InventoryManagementSoftware.ViewModels.CityEditVM

@{
    //ViewData["Title"] = "Edit";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Add/Edit City</h4>
</div>

<form asp-area="Administrator" asp-controller="City" asp-action="Save" method="post">

    <div class="modal-body">
        <div class="form-group">

            <input asp-for="Id" type="hidden" />

            <label>Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Country</label>
            <div>
                @if (Model.Id == 0)
                {
                    <select asp-for="CountryId" asp-items="Model.Countries" class="form-control">
                        <option>---Choose a country---</option>
                    </select>

                }
                else
                {
                    <select asp-for="CountryId" asp-items="Model.Countries" class="form-control"></select>

                }

            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn red btn-outline" data-dismiss="modal">Close</button>
        <button type="submit" class="btn green">Save changes</button>
    </div>
</form>


