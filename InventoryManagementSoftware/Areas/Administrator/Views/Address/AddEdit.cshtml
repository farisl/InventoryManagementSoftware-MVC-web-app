@using InventoryManagementSoftware.Core.Models;

@model InventoryManagementSoftware.ViewModels.AddressEditVM


@{
    ViewData["Title"] = "AddEditAddress";
   // Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12">
    <h2>Add/Edit</h2>
    <form asp-area="Administrator" asp-controller="Address" asp-action="Save" method="post">
        <div class="form-group">

            <input asp-for="Id" type="hidden" />

            <label>Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label>City</label>
            <div>
                @if (Model.Id == 0)
                {
                    <select asp-for="CityId" asp-items="Model.Cities" class="form-control">
                        <option>---Choose a city---</option>
                    </select>

                }
                else
                {
                    <select asp-for="CityId" asp-items="Model.Cities" class="form-control"></select>

                }

            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-sm">Submit</button>
    </form>
</div>