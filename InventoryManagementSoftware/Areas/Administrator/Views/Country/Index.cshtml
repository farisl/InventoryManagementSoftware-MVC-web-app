@using InventoryManagementSoftware.Core.Models;
@model  IEnumerable<Country>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    <h2>Countries</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Country x in Model)
            {
                <tr>
                    <td>@x.Name</td>
                    <td>
                        <a asp-area="Administrator" asp-action="Edit" asp-route-id="@x.Id" data-ajax-modal="true" data-ajax-modal-destination="basic" class="btn btn-primary">Edit</a>
                        <a asp-area="Administrator" asp-action="Delete"asp-route-id="@x.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <a asp-area="Administrator" asp-controller="Country" asp-action="Add" data-ajax-modal="true" data-ajax-modal-destination="basic" class="btn btn-success">Add</a>    @*href="/countries/add"*@
</div>
