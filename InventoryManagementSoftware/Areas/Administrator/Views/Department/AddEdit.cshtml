@model InventoryManagementSoftware.Service.DTO.Department.DTODepartment


@{
    ViewData["Title"] = "AddEditDepartment";
    Layout = null;
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Add/Edit Department</h4>
</div>

<form asp-area="Administrator" asp-controller="Department" asp-action="Save" method="post">
    <div class="modal-body">
        <input asp-for="Id" type="hidden" class="form-control" />
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label>Size (m2)</label>
            <input asp-for="Size" type="number" class="form-control" />
        </div>
        <div class="form-group">
            <label>Inventory</label>
            @if (Model.Id == 0)
            {
                <select asp-for="Inventory.Id" asp-items="Model.Inventories" class="form-control">
                    <option>---Choose inventory---</option>
                </select>
            }
            else
            {
                <select asp-for="Inventory.Id" asp-items="Model.Inventories" class="form-control"></select>
            }
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn red btn-outline" data-dismiss="modal">Close</button>
        <button type="submit" class="btn green">Save changes</button>
    </div>

</form>


