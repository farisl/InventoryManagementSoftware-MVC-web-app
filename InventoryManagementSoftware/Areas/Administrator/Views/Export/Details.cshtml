@model InventoryManagementSoftware.Service.DTO.Export.DTOExport
@{
    Layout = null;
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Details</h4>
</div>
<div class="modal-body">
    <div class="form-group">
        <input asp-for="Id" type="hidden" />
        <label>Date</label>
        <input asp-for="Date" type="date" class="form-control" disabled="disabled" />
        <label>Inventory</label>
        <input asp-for="Inventory.Name" class="form-control" disabled="disabled" />
        <label>Quantity</label>
        <input asp-for="Quantity" class="form-control" disabled="disabled" />
        <label>Total price</label>
        <input asp-for="TotalPrice" class="form-control" disabled="disabled" />
    </div>
    <div class="form-group">
        <label>Products</label>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Discount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.ExportDetails)
                {
                    <tr>
                        <td>@x.Product.Name</td>
                        <td>@x.Quantity</td>
                        <td>@x.Discount%</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn red btn-outline" data-dismiss="modal">Close</button>
</div>


