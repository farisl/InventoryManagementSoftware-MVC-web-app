@model InventoryManagementSoftware.Service.DTO.Category.DTOCategory
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Add category</h4>
</div>

<form asp-area="Administrator" asp-controller="Category" asp-action="Save" data-ajax-form="true" method="post" id="category_add_edit_form">

    <div class="modal-body">
        <div class="form-group">
            <input asp-for="Id" type="hidden" />
            <input asp-for="CategoryBrandsListItems" type="hidden" />

            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label>Brands</label>
            <select class="category-brand-multiple form-control dropdown-toggle" asp-for="SelectedCategoryBrandsIds" asp-items="Model.CategoryBrandsListItems" style="width : 100%"></select>
        </div>
        <span asp-validation-for="SelectedCategoryBrandsIds" class="text-danger"></span>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
        <button id="btnSubmit" type="submit" class="btn green">Save changes</button>
    </div>
</form>
<script>
    $(document).ready(function () {
        $('.category-brand-multiple').select2();
    });

</script>
