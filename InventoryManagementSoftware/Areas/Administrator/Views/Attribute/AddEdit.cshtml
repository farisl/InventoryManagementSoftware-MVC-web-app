@model InventoryManagementSoftware.Service.DTO.Attribute.DTOAttribute
@inject InventoryManagementSoftware.Web.Resource localizer
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">@localizer.Add/@localizer.Edit @localizer.Attributes</h4>
</div>

<form asp-area="Administrator" asp-controller="Attribute" asp-action="Save" data-ajax-form="true" method="post" id="attribute_add_form">

    <div class="modal-body">
        <div class="form-group">
            <input asp-for="Id" type="hidden" />

            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>


        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn dark btn-outline" data-dismiss="modal">@localizer.Close</button>
        <button type="submit" class="btn green">@localizer.Save</button>
    </div>

</form>

